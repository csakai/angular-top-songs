<!DOCTYPE HTML>
<html ng-app="main">
  <head>
    <title>Angular Top Songs</title>
    <link rel="stylesheet" type="text/css" href="vendor/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="vendor/angular-ui-bootstrap/dist/ui-bootstrap-csp.css">
    <link rel="stylesheet" type="text/css" href="src/main.css">
  </head>
  <body>
    <div class="container" ng-controller="MainCtrl as Main">
      <div class="row">
        <div class="col-xs-2">
          <!--playlist here -->
        </div>
        <div class="col-xs-10">
          <song-searchbar can-search="Main.isNotWaiting()" on-search="Main.searchHandler(data)"></song-searchbar>
          <div ng-if="Main.hasResults.artists">
            <a href="javascript:void(0);"
              ng-click="Main.toggleCollapsed('artists')"
              class="btn"
              ng-class="{ 'btn-danger': Main.collapsed.artists, 'btn-success': !Main.collapsed.artists }">
              <h3>
                <span class="glyphicon"
                  ng-class="{ 'glyphicon-minus': !Main.collapsed.artists, 'glyphicon-plus': Main.collapsed.artists }">
                </span>
                Artists
              </h3>
            </a>
            <div uib-collapse="Main.collapsed.artists">
              <div class="results-container">
                <artist class="result" ng-repeat="info in Main.data.artists.items" info="info"></artist>
                <div class="result load-more">
                  <button class="load-more-btn btn btn-success" ng-if="Main.data.artists.next" ng-click="Main.more('artist')">
                    Load more artists
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% vendor_deps.forEach(function(dep) { %>
      <script type="text/javascript" src="vendor/<%= dep %>"></script>
    <% }); %>

    <% src_deps.forEach(function(dep) { %>
      <script type="text/javascript" src="src/<%= dep %>"></script>
    <% }); %>
  </body>
</html>
